modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend (React + Vite)"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend (FastAPI)"

[[workflows.workflow]]
name = "Frontend (React + Vite)"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend (FastAPI)"
